<div id="comment_<%= comment.id %>_like_button">
  <% if user_signed_in? %>
    <% if comment.liked_by?(current_user) %>
      <%= button_to unlike_post_comment_path(comment.post, comment), method: :delete, class: "inline-flex items-center text-red-500 hover:text-red-700 transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-1 fill-current" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span class="font-medium"><%= comment.like_count %></span>
      <% end %>
    <% else %>
      <%= button_to like_post_comment_path(comment.post, comment), method: :post, class: "inline-flex items-center text-gray-500 hover:text-red-500 transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span class="font-medium"><%= comment.like_count %></span>
      <% end %>
    <% end %>
  <% else %>
    <div class="inline-flex items-center text-gray-400">
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
      <span class="font-medium"><%= comment.like_count %></span>
    </div>
  <% end %> 
</div>