<div id="comment_<%= comment.id %>_form">
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-100">
    <div class="flex items-start space-x-3">
      <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center flex-shrink-0">
        <span class="text-white font-semibold text-xs">
          <%= current_user.email.first.upcase %>
        </span>
      </div>
      
      <div class="flex-1">
        <%= form_with model: [comment.post, comment], class: "space-y-3" do |form| %>
          <div>
            <%= form.text_area :body, 
                class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none transition-all duration-200",
                rows: 3,
                required: true,
                data: { 
                  controller: "comment-form",
                  action: "keydown->comment-form#handleKeydown"
                } %>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Update
              </button>
              
              <button type="button" onclick="toggleEditForm('<%= dom_id(comment) %>')" class="text-gray-500 hover:text-gray-700 transition-colors duration-200">
                Cancel
              </button>
            </div>
            

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 